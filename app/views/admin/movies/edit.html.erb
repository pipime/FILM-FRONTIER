<h1>映画編集</h1>
  <%= form_for @movie, url: admin_movie_path(@movie) do |f| %>

    <h4> イメージ</h4>
      <%= f.attachment_field :jacket_image %>

    <h4> タイトル</h4>
      <%= f.text_field :title %>

    <h4> 制作年</h4>
      <%= f.select :year_id, Year.all.map{|y| [y.year, y.id] } %>

    <h4> ジャンル</h4>
      <%= f.select :genre_id, Genre.all.map{|g| [g.genre, g.id] } %>
      <%= link_to "ジャンル編集", edit_admin_movie_genre_path(@movie.id, @movie.genre.id) %>

    <h4> あらすじ</h4>
      <%= f.text_area :summary %>

    <h4> 出演者</h4>
      <%= f.select :cast_id, Cast.all.map{|c| [c.cast, c.id] } %>

      <%= f.submit '登録', class: "btn btn-primary btn-lg"%>

   <% end %>
